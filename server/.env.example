# =============================
# Server & App
# =============================
PORT=5000
NODE_ENV=development

# Public app/client URLs (for CORS, redirects)
# Comma-separated list for multiple origins
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin

# =============================
# Database (MongoDB)
# =============================
# Local fallback will be used if not provided: mongodb://127.0.0.1:27017/attari_collection
# Prefer using MongoDB Atlas connection string in production
MONGODB_URI=mongodb://127.0.0.1:27017/attari_collection

# =============================
# Auth / Security
# =============================
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=7d
# Cookie flags (secure should be true in production with HTTPS)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Optional: Pre-seed an admin (only if you implement seeding)
ADMIN_DEFAULT_EMAIL=admin@example.com
ADMIN_DEFAULT_PASSWORD=ChangeMe123!

# =============================
# Stripe (Payments)
# =============================
# Get from Stripe Dashboard
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Optional checkout return URLs if needed by frontend
STRIPE_SUCCESS_URL=${CLIENT_URL}/checkout/success
STRIPE_CANCEL_URL=${CLIENT_URL}/checkout/cancel

# =============================
# Cloudinary (Media Storage)
# =============================
# Get from Cloudinary Dashboard
CLOUDINARY_CLOUD_NAME=your_cloud
CLOUDINARY_API_KEY=your_key
CLOUDINARY_API_SECRET=your_secret
# Optional default folder for uploads
CLOUDINARY_FOLDER=attari-collection

# =============================
# SMTP / Email
# =============================
# Example: Gmail SMTP (use app password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your@email
SMTP_PASS=your_app_password
FROM_EMAIL="Attari Collection <noreply@attaricollection.com>"

# =============================
# Analytics / Reporting (optional)
# =============================
# Timezone for reports (IANA)
REPORTS_TZ=Asia/Karachi

# =============================
# Rate Limiting (optional overrides)
# =============================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# =============================
# Logging (optional)
# =============================
LOG_LEVEL=debug
